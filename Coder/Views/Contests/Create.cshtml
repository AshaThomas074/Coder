@model Coder.Models.Contest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Contest</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="ContestName" class="form-control" />
                <label asp-for="ContestName" class="control-label"></label>                
                <span asp-validation-for="ContestName" class="text-danger"></span>
            </div>
            <div class="form-floating">                
               
                <input type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" asp-for="FinalDate" class="form-control" />
                <label asp-for="FinalDate" class="control-label"></label>                
                <span asp-validation-for="FinalDate" class="text-danger"></span>
            </div>
            
            <input type="hidden" asp-for="UserId" />               
            
            <div class="form-floating" style="margin-top:10px;">
                <input type="submit" value="Create" class="w-100 btn btn-lg btn-primary" />
            </div>
        </form>
    </div>
</div>

    <a style="margin-top:10px;" asp-action="Index">Back to List</a>



