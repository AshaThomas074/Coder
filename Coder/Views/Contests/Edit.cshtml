@model Coder.Models.Contest

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Contest</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ContestId" />
            <div class="form-floating">
                <input asp-for="ContestName" class="form-control" />
                <label asp-for="ContestName" class="control-label"></label>                
                <span asp-validation-for="ContestName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="date" asp-for="FinalDate" min="@DateTime.Today.ToString("yyyy-MM-dd")" class="form-control" />
                <label asp-for="FinalDate" class="control-label"></label>                
                <span asp-validation-for="FinalDate" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Status" />
            <input type="hidden" asp-for="CreatedOn" />
            <input type="hidden" asp-for="UpdatedOn" />
            <input type="hidden" asp-for="PublishedStatus" />
            <div class="form-floating">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top:10px;">
    <a asp-action="Index">Back to List</a>
</div>

