@model IEnumerable<Coder.Models.Contest>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .switch {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 34px;
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        -webkit-transition: .4s;
        transition: .4s;
    }

       
</style>


<h2>List of Contests</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContestName)
            </th>
            <th>Status</th>
            <th>
                @Html.DisplayNameFor(model => model.FinalDate)
            </th>   
            <th></th>
            <th>Publish Contest</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="width:40%">
                @Html.DisplayFor(modelItem => item.ContestName)
            </td>
                <td>
                    @if (item.Status == 1)
                    {
                        @if (item.PublishedStatus == 1)
                        {
                            @("Active")
                        }
                        else
                        {
                            <p id="status_@(item.ContestId)">@("Unpublished")</p>
                        }
                    }
                    else
                    {
                        @("End")
                    }
                </td>
                <td style="width:20%">
                @Html.DisplayFor(modelItem => item.FinalDate)
            </td>

                <td style="width:20%">
                    @if (item.Status == 1)
                    {
                        <a asp-action="Edit" asp-route-id="@item.ContestId">Edit</a> @(" | ")                        
                    }
                <a asp-action="Details" asp-route-id="@item.ContestId">Details</a> 
                    @if (item.PublishedStatus != 1 || item.Status == 0) {
                        @(" | ")
                      @Html.ActionLink("Delete", "Delete", new { id = item.ContestId },
                new { onclick = "return confirm('Are you sure wants to delete?');",@class="delete"+item.ContestId })
                    }
            </td>
                <td style="width:20%">
                @if(item.Status == 1 && item.PublishedStatus != 1){
                   
                        <label class="switch" >
                                        <input type="checkbox" id="toggleContestSwitch_@(item.ContestId)" class="toggle-contest-switch" data-contestid="@item.ContestId">
                                        <span class="slider round" id="sliderContestRound_@(item.ContestId)"></span>
                        </label>

                    }
                    
            </td>
        </tr>
}
    </tbody>
</table>
