@model Coder.Models.SolveQuestionViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css" media="screen">
    #editor {
        position: absolute;
        top: 162px;
        right: 39px;
        bottom: 139px;
